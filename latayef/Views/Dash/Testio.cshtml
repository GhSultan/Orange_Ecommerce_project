@model IEnumerable<latayef.Models.Testimonial>

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="apple-touch-icon" sizes="76x76" href="../assets/img/apple-icon.png">
    <link rel="icon" type="image/png" href="../assets/img/favicon.png">
    <title>
        Admin - Testimonial Review Management
    </title>
    <!-- Fonts and icons -->
    <link href="https://fonts.googleapis.com/css?family=Inter:300,400,500,600,700,800" rel="stylesheet" />
    <!-- Nucleo Icons -->
    <link href="https://demos.creative-tim.com/soft-ui-dashboard/assets/css/nucleo-icons.css" rel="stylesheet" />
    <link href="https://demos.creative-tim.com/soft-ui-dashboard/assets/css/nucleo-svg.css" rel="stylesheet" />
    <!-- Font Awesome Icons -->
    <script src="https://kit.fontawesome.com/42d5adcbca.js" crossorigin="anonymous"></script>
    <!-- CSS Files -->
    <link id="pagestyle" href="../assets/css/soft-ui-dashboard.css?v=1.1.0" rel="stylesheet" />
    <style>
        .review-card {
            border: 1px solid #ddf0db;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            padding: 15px;
            text-align: center;
            margin: 20px;
        }

            .review-card .action-button {
                font-family: 'Inter', sans-serif;
                background-color: #28a745;
                color: #fff;
                border: none;
                padding: 8px 16px;
                font-size: 0.875rem;
                border-radius: 4px;
                cursor: pointer;
                transition: background-color 0.3s;
            }

                .review-card .action-button.reject {
                    background-color: #dc3545;
                }

                .review-card .action-button:hover {
                    opacity: 0.8;
                }
    </style>
</head>

<body class="g-sidenav-show bg-gray-100">
    <main class="main-content position-relative max-height-vh-100 h-100 border-radius-lg ">
        <!-- Navbar -->
        <nav class="navbar navbar-main navbar-expand-lg px-0 mx-4 shadow-none border-radius-xl" id="navbarBlur" navbar-scroll="true">
            <div class="container-fluid py-1 px-3">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb bg-transparent mb-0 pb-0 pt-1 px-0 me-sm-6 me-5">
                        <li class="breadcrumb-item text-sm"><a class="opacity-5 text-dark" href="javascript:;">Pages</a></li>
                        <li class="breadcrumb-item text-sm text-dark active" aria-current="page">Dashboard</li>
                    </ol>
                    <h6 class="font-weight-bolder mb-0">Testimonial and Reviews</h6>
                </nav>
            </div>
        </nav>
        <!-- End Navbar -->
        <div class="container-fluid py-4">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header pb-0">
                            <div class="row">
                                <div class="col-lg-12 col-7 d-flex flex-row justify-content-lg-between">
                                    <h6>Testimonial and Reviews</h6>
                                </div>
                            </div>
                        </div>
                        <div class="card-body px-0 pb-2">
                            <div class="row">
                                @foreach (var testimonial in Model)
                                {
                                    <div class="col-md-4">
                                        <div class="card review-card mb-4">
                                            <div class="card-body">
                                                <h6 class="mb-1">@testimonial.Name</h6>
                                                <p class="text-xs mt-2">@testimonial.Review</p>
                                                <div class="button-container d-flex justify-content-center mt-3">
                                                    <!-- Accept Button Form -->
                                                    <form asp-action="ApproveTestimonial" asp-controller="Admin" method="post" class="me-2">
                                                        <input type="hidden" name="id" value="@testimonial.Id" />
                                                        <button type="submit" class="action-button">Accept</button>
                                                    </form>
                                                    <!-- Reject Button Form -->
                                                    <form asp-action="RejectTestimonial" asp-controller="Admin" method="post">
                                                        <input type="hidden" name="id" value="@testimonial.Id" />
                                                        <button type="submit" class="action-button reject">Reject</button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
    <!-- Core JS Files -->
    <script src="../assets/js/core/popper.min.js"></script>
    <script src="../assets/js/core/bootstrap.min.js"></script>
    <script src="../assets/js/plugins/perfect-scrollbar.min.js"></script>
    <script src="../assets/js/plugins/smooth-scrollbar.min.js"></script>
    <!-- Control Center for Soft Dashboard: parallax effects, scripts for the example pages etc -->
    <script src="../assets/js/soft-ui-dashboard.min.js?v=1.1.0"></script>
</body>

</html>
